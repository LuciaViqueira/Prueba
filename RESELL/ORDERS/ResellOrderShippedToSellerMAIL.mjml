<mjml>
  <mj-head>
    <mj-title>ZARA</mj-title>
    <mj-include path="styles-R22" />
  </mj-head>
  <mj-body width="535px">
    <!-- Template configuration -->
    <mj-raw>
      [[#assign "showHowPaymentWorksObservations"]]true[[/assign]]
    </mj-raw>
    <!-- Global Variables -->
    <mj-raw>
      [[#each payload.notification.marketingInformation.universalLinks]]
        [[#ifb (andb (compare this.urlName "==" "TrackingShipmentLabelLink") (compare this.urlValue "!=" ""))]][[#assign "trackShipmentButtonUrl"]][[this.urlValue]][[/assign]][[/ifb]]
      [[/each]]
      [[#assign "storeLegacyValue"]][[payload.notification.store.identifier.legacyValue]][[/assign]]
    </mj-raw>
    <!-- SecciÃ³n 1 cabecera -->
    <mj-section>
      <mj-column>
        <mj-image width="169px" src="[[zaraResellImg]]" padding-top="48px" padding-bottom="32px" align="center"/>
        <mj-text css-class="rd-title" align="center">
          [[tags.OrderShippedToSeller_title]]
        </mj-text>
        <mj-text padding-top="24px" css-class="rd-text-info">
          [[tags.OrderShippedToSeller_rememberSetUpStripeAccount]]
        </mj-text>
       </mj-column>
    </mj-section>

    <mj-raw>
      [[#with payload.notification]]
    </mj-raw>
      <mj-include path="ResellOrderItemList" />
    <mj-raw>
      [[/with]]
    </mj-raw>

    <mj-section>
      <mj-column>
        <mj-divider />
      </mj-column>
    </mj-section>
    <mj-section padding-bottom="28px" css-class="resell-section-double-button">
      <mj-column>
        <mj-button css-class="rd-order-detail-btn-noPadBottom" 
            background-color="#FFFFFF" 
            color="#000000" 
            border="1px solid #000000" 
            font-weight="bold" 
            text-transform="uppercase" 
            width="100%"
            href="[[trackShipmentButtonUrl]]" >
          [[tags.OrderShippedToSeller_trackShipmentButtonTxt]]
        </mj-button>
      </mj-column>
      <mj-column>
        <mj-button css-class="rd-order-detail-btn-noPadBottom" 
            background-color="#000000" 
            color="#FFFFFF" 
            border="1px solid #FFFFFF" 
            font-weight="bold" 
            text-transform="uppercase" 
            width="100%"
            href="[[urlResolver 'StripePayoutAccountURL']]" >
          [[tags.OrderShippedToSeller_setupPaymentButtonTxt]]
        </mj-button>
      </mj-column>
    </mj-section>

    <mj-include path="ResellObservations" />
    
    <mj-section>
      <mj-column>
        <mj-divider padding-top="4px" border-color="#E5E5E5" />
      </mj-column>
    </mj-section>

    <mj-raw>
      [[#eq storeLegacyValue  "11727"]]
        [[#assign "hiddenInRussia"]]true[[/assign]]
        [[#assign "hiddenTiktok"]]true[[/assign]]
      [[/eq]]
      [[#ifb (orb (compare storeLegacyValue "==" "11716") (compare storeLegacyValue "==" "11744"))]]
        [[#assign "hiddenTiktok"]]true[[/assign]]
      [[/ifb]]
    </mj-raw>
    <mj-include path="ResellFooter" />

  </mj-body>
</mjml>